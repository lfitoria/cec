{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form, {attr: {class: 'form-eval'}}) }}
<!--Accordion wrapper-->
<div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">

    <!-- Accordion card -->
    <div class="card">

        <!-- Card header -->
        <div class="card-header" role="tab" id="headingOne1">
            <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true" aria-controls="collapseOne1">
                <h5 class="mb-0">
                    Dictamen de solicitud
                </h5>
            </a>
        </div>

        <!-- Card body -->
        <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1" data-parent="#accordionEx">
            <div class="card-body">
                
                {# {{ form_widget(form) }} #}
                {{ form_row(form.category, {label_attr: {class: 'radio-custom no-label'} }) }}
                {{ form_row(form.status, {label_attr: {class: 'radio-custom no-label'} }) }}
                {{ form_row(form.observations, {label_attr: {class: 'no-label'} }) }}
                {{ form_row(form.fakeFiles, {label_attr: {class: 'no-label'} }) }}
                {# <button class="btn">{{ button_label|default('Save') }}</button> #}
                {{ form_end(form) }}
                {{ include('commons/_form_footer.html.twig', {'button_label':'Enviar revisión', 'button_label_save': 'Guardar sin enviar', finish: 1}) }}
            </div>
        </div>

    </div>
    <!-- Accordion card -->

</div>
<!-- Accordion wrapper -->
{% if eval %}
<p class="title-table-index">{{'Resumen de evaluaciones previas'|upper}}</p>
<div id="accordion">
{% for pei in eval %}
    {# <pre>
        {{ dump(pei) }}
    </pre> #}
    <div class="card">
    <div class="card-header" id="head-{{pei.id}}">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-{{pei.id}}" aria-expanded="true" aria-controls="collapseOne">
            Evaluación CEC-{{project_request.id}}-{{pei.date|date("Y")[2:3]}} | Fecha: {{pei.date|date("d/m/Y g:ia")}}
        </button>
      </h5>
    </div>

    <div id="collapse-{{pei.id}}" class="collapse" aria-labelledby="head-{{pei.id}}" data-parent="#accordion">
      <div class="card-body">
        <p>{{pei.observations}}</p>
      </div>
    </div>
  </div>
{% endfor %}
</div>
{% endif %} 

