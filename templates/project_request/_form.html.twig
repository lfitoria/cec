  {# {{ form_row(form.category,{label_attr: {class: 'radio-custom'} }) }} #}
  {{ form_row(form.category, {attr: {'data-code': 'categoryBiomedicaFiles', class: 'decision_question'}, label_attr: {class: 'radio-custom'} }) }}
