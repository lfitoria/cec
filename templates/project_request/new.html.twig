{% extends 'base.html.twig' %}

{% block title %}New ProjectRequest{% endblock %}

{% block body %}
        
    <h1>Create new ProjectRequest</h1>

    {{ include('project_request/_form.html.twig') }}


    <a href="{{ path('project_request_index') }}">back to list</a>

    <script type="text/javascript">
        $(".decision_question input").change(function () {
            var _this = $(this);
            var targetId = "#" + _this.parent().parent().data("code");
            if ($(this).val() === 1) {
                $(targetId).removeClass("d-none");
            } else if ($(this).val() === 0) {
                $(targetId).addClass("d-none");
            }
        });

    </script>

{% endblock %}
